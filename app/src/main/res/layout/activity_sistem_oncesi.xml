<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context=".SistemOncesi">

    <!-- En Yukardaki Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/main_rounded_top"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <!-- Dizayn VİP Logosu -->
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:src="@mipmap/logo_dizaynvip"
            android:contentDescription="@string/logo"
            android:scaleType="fitXY"
            android:layout_marginStart="270dp"/>
    </LinearLayout>

    <!-- Ortadaki Yazı -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sistemoncesi_textAcKapaTikla"
        android:textSize="19sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="240dp"
        android:textStyle="italic"/>

    <!-- En Aşağıdaki Layout -->
    <LinearLayout
        android:id="@+id/sistemoncesi_layoutSistemAcKapat"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/main_rounded_bottom"
        android:layout_marginTop="270dp"
        android:gravity="center">

        <!-- Sistem Aç/Kapat Yazısı -->
        <TextView
            android:id="@+id/sistemoncesi_tvSistemAcKapat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sistemoncesi_sistemAcKapa"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginVertical="23dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>
